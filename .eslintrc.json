{
  "env": {
    "commonjs": true, 
    "node": true,    
    "es2021": true   
  },
  "parserOptions": {
		"ecmaVersion": 12
	},
  "ignorePatterns": [
    "migrations/"
  ],
  "extends": "eslint:recommended",
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "space-before-blocks": ["error", "always"]
  }
}
